<tr>
    {% set number_users = job.users|length %}
    <td>{{ job.nom }}</td>
    <td class="text-right">
        {% if is_granted('ROLE_MANAGER') %}
            {% if number_users == 0 %}
                <a href="{{ path('jobs_edit',{ "id": job.id }) }}"
                   class="btn btn-info btn-sm">
                    <i class="fa fa-pencil mr-0"></i>
                </a>
                <a href="{{ path('jobs_remove', { 'id': job.id }) }}"
                   onclick="return(confirm('Supprimer le metier \'{{ job.nom }}\''))"
                   class="btn btn-danger btn-sm">
                    <i class="fa fa-trash mr-0"></i>
                </a>
            {% else %}
                <i>
                    <b>Opérations Impossible : </b>
                    {{ '&nbsp'|pluriel(number_users,'','&nbsp')|raw }}
                    Il y à {{ number_users }} {{ 'employée'|pluriel(number_users,'s','') }} ayant ce métier
                </i>
            {% endif %}
        {% endif %}
    </td>
</tr>