<aside class="app-sidebar">
    <div class="app-sidebar__user {% if is_granted('ROLE_MANAGER') %}manager-icon{% endif %}">
        <img class="app-sidebar__user-avatar"
             src="{{ asset('img/' ~ (app.user.prenom|lower) ~ (app.user.nom|lower) ~ '.jpg') }}"
             alt="User Image">
        <div>
            <a href="{{ path("employees_details",{ "id": app.user.id }) }}"
               class="app-sidebar__user-name text-white font-weight-bold">
                {{ app.user.nom }} {{ app.user.prenom }}
            </a>
            <p class="app-sidebar__user-designation">{{ app.user.job.nom }}</p>
        </div>
    </div>
    {% include "sidebar/aside/menu/_sidebar_aside_menu.html.twig" %}
</aside>