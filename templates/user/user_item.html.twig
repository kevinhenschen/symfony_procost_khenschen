<tr>
    <td>{{ employee.prenom|capitalize }} {{ employee.nom|upper }}</td>
    <td>{{ employee.email }}</td>
    <td>{{ employee.job.nom }}</td>
    <td>{{ employee.coutHoraire|format_currency('EUR', locale='fr_FR') }}</td>
    <td>{{ employee.dateEmbauche|date('m')|fr_month|capitalize }} {{ employee.dateEmbauche|date("Y") }}</td>
    <td class="text-right">

        {% if employee.id == app.user.id %}
            <a href="{{ path("employees_edit",{ "id": employee.id })}}" class="btn btn-info btn-sm">
                <i class="fa fa-pencil mr-0"></i>
            </a>
        {% endif %}

        {% if employee.id == app.user.id or is_granted('ROLE_MANAGER') %}
        <a href="{{ path("employees_details",{ "id": employee.id })}}" class="btn btn-primary btn-sm">
            <i class="fa fa-eye mr-0"></i>
        </a>
        {% endif %}
        
    </td>
</tr>